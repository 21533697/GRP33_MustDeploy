@model IEnumerable<MyBookingRoles.Models.Store.DeliveryJob>

@{
    ViewBag.Title = "MakeDelivery";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2 style="text-align:center;">MakeDelivery</h2>

<table class="table table-responsive table-hover table-condensed" id="UsersWithRoles">
    <tr style="background-color: gray;">
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryPersonId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoicePdf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceDownloaded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AcceptedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryPersonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoicePdf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDownloaded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcceptedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.JobId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.JobId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.JobId })*@
            </td>
        </tr>
    }

</table>
<hr />
