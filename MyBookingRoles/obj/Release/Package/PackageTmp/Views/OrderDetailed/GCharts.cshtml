
@{
    ViewBag.Title = "GCharts";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Charts</h2>

<!--Div that will hold the pie chart-->

<div>
    @*<img src="@Url.Action("OrderDetailed/GCharts")" alt="Bar Chart" />*@
    @{
        var chart = new Chart(width: 500, height: 500, theme: ChartTheme.Yellow)
       .AddTitle("Sold Product Quantity")
       .AddSeries("Default", chartType: "Pie",
            xValue: ViewBag.xValue, xField: "ProdName",
            yValues: ViewBag.yValue, yFields: "Quantity")
        .Write();
    }
</div>