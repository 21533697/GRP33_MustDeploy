@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="jumbotron" style="text-align: center;">
    <h1>SuperAdmin Dashboard.</h1>
    <h4 class="lead" style="text-align: center;">
        <b><u>@User.Identity.GetUserName()</u></b>
    </h4>
    <hr />
    <div style="padding:5px; border: 1px solid black; background-color: seagreen;" class="row">
        <p>Manage Your Website.</p>
    </div>
</div>
<br />
<div class="row">
    <div class="container">

        <div class="col-md-3 col-md-9" style="border-right: 1px solid black;">
            <h2 style="border: 1px solid black; text-align: center; background-color: white;">Menu</h2>
            <h4><u>Store Information Menu</u> </h4>
            <br />
            @Html.ActionLink("Manage Products", "Index", "Products", null, new { @class = "btn btn-default form-control" })<br /><br />
            @Html.ActionLink("Manage Brands", "Index", "Brands", null, new { @class = "btn btn-default form-control" })<br /><br />
            @Html.ActionLink("Manage Categories", "Index", "Categories", null, new { @class = "btn btn-default form-control" })
            <br />
            <hr />
            <h4><u>Customers Menu</u></h4>
            <br />
            @Html.ActionLink("Manage All Cutsomer Users", "customerIndex", "SuperAdmin", null, new { @class = "btn btn-default form-control" })
            <br />
            <hr />
            <h4><u>Roles Menu</u></h4>
            <br />
            @Html.ActionLink("Manage User Roles", "UsersWithRoles", "AppUsers", null, new { @class = "btn btn-default form-control" })<br /><br />
            @Html.ActionLink("Manage Roles", "Index", "Role", null, new { @class = "btn btn-default form-control" })
            <br />
            <hr />
            <h4><u>Notification Menu</u></h4>
            <br />
            @Html.ActionLink("Manage Notification", "Index", "Email_Notifs", null, new { @class = "btn btn-default form-control" })<br /><br />
            <br />
            <hr />
        </div>
        <div class="col-md-9" style="background-color: silver; padding:5px;">
            <h1 style="border: 1px solid black; text-align: center;  background-color: white;"><u>Store Management</u></h1>

            <p style="text-align: center; border: 1px solid black; padding:5px;">
                @Html.ActionLink("Sales", "Index", "OrderDetailed", null, new { @class = "btn btn-warning form-control" })<br /><br />

            </p>

            <div class="col-md-4" style="border-right: 1px solid black;">
                <h3><u>Stock Management</u></h3>
                <br />

                <p>
                    @Html.ActionLink("Inventory management", "ListIndex", "Inventory", null, new { @class = "btn btn-primary" })
                    <hr />
                    Add Or remove Discount, Quantity, Special And Feature From a product.
                </p>

            </div>
            <div class="col-md-4" style="border-right: 1px solid black;">
                <h3><u>Orders & Shopping</u></h3>
                <br />

                <p>
                    @Html.ActionLink("All Orders List", "Index", "Orders", null, new { @class = "btn btn-primary" })
                    <hr />
                    Review Order, Approve and Delete Order.
                </p>
            </div>
            <div class="col-md-4" style="border-right: 1px solid black;">
                <h3><u>Delivery & Shipping</u></h3>
                <br />

                <p>
                    @Html.ActionLink("Delivery Management", "DeliverySystemIndex", "DeliverySystem", null, new { @class = "btn btn-primary" })
                    <hr />
                    Add Or remove and manage Delivery/Delivery Users.
                </p>
            </div>
            <hr />
        </div>

        <div class="col-md-9" style="background-color: silver; padding:5px;">
            <br />

